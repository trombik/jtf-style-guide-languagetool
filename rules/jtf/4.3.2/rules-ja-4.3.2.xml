<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../print.xsl" title="Pretty print" ?>
<?xml-stylesheet type="text/css" href="../rules.css" title="Easy editing stylesheet" ?>
<rules xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xs="http://www.w3.org/2001/XMLSchema" lang="ja" xsi:noNamespaceSchemaLocation="../rules.xsd">
  <category id="JTF-4_3_2" name="長さ">
  <!-- 4.3.2 長さ -->
      <rule id="JTF-4_3_2-km" name="km">
        <pattern>
          <!-- 数字 -->
          <token postag="未知語"/>
          <marker>
            <token>㎞</token>
          </marker>
        </pattern>
        <message>カタカナもしくはアルファベットを使います。</message>
        <suggestion>km</suggestion>
        <suggestion>キロメートル</suggestion>
        <example correction="km|キロメートル">東京まで100<marker>㎞</marker>です</example>
      </rule>
      <rule id="JTF-4_3_2-m" name="m">
        <pattern>
          <!-- 数字 -->
          <token postag="未知語"/>
          <marker>
            <token>㍍</token>
          </marker>
        </pattern>
        <message>カタカナもしくはアルファベットを使います。</message>
        <suggestion>m</suggestion>
        <suggestion>メートル</suggestion>
        <example correction="m|メートル">長さは1<marker>㍍</marker>です</example>
      </rule>
  </category>
</rules>
