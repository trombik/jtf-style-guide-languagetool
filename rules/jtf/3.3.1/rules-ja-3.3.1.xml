<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../print.xsl" title="Pretty print" ?>
<?xml-stylesheet type="text/css" href="../rules.css" title="Easy editing stylesheet" ?>
<rules lang="ja" xsi:noNamespaceSchemaLocation="../../../../../../../../../languagetool-core/src/main/resources/org/languagetool/rules/rules.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <category id="JTF-3_3_1" name="">
    <!-- 3.3.1 丸かっこ（）-->
    <rulegroup id="JTF-3_3_1-MARUKAKKO" name="丸かっこ">
      <rule>
        <pattern>
          <token>(</token>
        </pattern>
        <message>丸かっこは全角を使います。"<suggestion>（</suggestion>"</message>
        <example correction="（">括弧<marker>(</marker>かっこ）</example>
      </rule>
      <rule>
        <pattern>
          <token>)</token>
        </pattern>
        <message>丸かっこは全角を使います。"<suggestion>）</suggestion>"</message>
        <example correction="）">括弧（かっこ<marker>)</marker></example>
      </rule>
    </rulegroup>
    <!-- 3.3.2 大かっこ［］-->
    <rulegroup id="JTF-3_3_2-DAIKAKKO" name="大かっこ">
      <rule>
        <pattern>
          <token>[</token>
        </pattern>
        <message>大かっこは全角を使います。"<suggestion>［</suggestion></message>
        <example correction="［"><marker>[</marker>括弧かっこ］</example>
      </rule>
      <rule>
        <pattern>
          <token>]</token>
        </pattern>
        <message>大かっこは全角を使います。"<suggestion>］</suggestion>"</message>
        <example correction="］">［括弧かっこ<marker>]</marker></example>
      </rule>
    </rulegroup>
    <!-- 3.3.3 かぎかっこ「」-->
    <!-- 3.3.4 二重かぎかっこ『』-->
    <!-- 3.3.5 二重引用符" " -->
    <rulegroup id="JTF-3_3_5-NIJUINYOUHU" name="二重引用符">
      <rule>
        <!-- Right double quotation mark -->
        <pattern>
          <token>”</token>
        </pattern>
        <message>二重引用符は半角の「<suggestion>"</suggestion>」を使います。</message>
        <example correction="&quot;">二重引用符は"半角<marker>”</marker></example>
      </rule>
      <rule>
        <!-- Left double quotation mark -->
        <pattern>
          <token>“</token>
        </pattern>
        <message>二重引用符は半角の「<suggestion>"</suggestion>」を使います。</message>
        <example correction="&quot;">二重引用符は<marker>“</marker>半角"</example>
      </rule>
    </rulegroup>
  </category>
</rules>
